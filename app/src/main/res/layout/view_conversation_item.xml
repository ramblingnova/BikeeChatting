<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO : 유저 이미지에서 marginBottom이 적용되지 않습니다. -->
    <ImageView
        android:id="@+id/view_conversation_item_user_image_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/view_conversation_item_conversation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/view_conversation_item_conversation_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_conversation_item_conversation_text_view"
        android:layout_marginTop="4dp"
        android:textColor="@color/bikeeGray"
        android:textSize="10sp" />
</RelativeLayout>